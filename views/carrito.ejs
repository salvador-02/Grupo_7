  <!--Body-->

        <!--Producto -->

    <div class="container col-lg-6 col-sm-2 col-12">
    <div>
        <h6 class="mt-3 mb-3">Mi Carrito</h6>
    </div>
        <div class="col mb-3"> 
            <% productos.forEach(producto => { %>
                <div class="row mb-2" id="tiras">
                    <div class="card align-items-center" style="width: 18rem;">
                        <img style="max-width: 8em;" src="images/<%= producto.image %> " class="card-img-top" alt="...">
                    </div>
                    <p class="card-text ml-3">1x  <%= producto.name %> </p>
                    <p class="ml-3" style="font-weight: bold; font-size: 1.2em;">$<%= producto.price - (producto.price * producto.descuento / 100) %> </p>
                </div>
          <% }) %> 
        </div>
        
        <div class="d-flex flex-row-reverse bd-highlight mb-3">
            <p> PRECIO FINAL </p>
        </div>
        
        <div class="d-flex flex-row-reverse bd-highlight mb-3">
            <a class="btn btn-success" href="/">Finalizar Compra</a>
        </div>
        
    </div>

