<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9f65918680.js" crossorigin="anonymous"></script>
    <title>Gamer Zone Home</title>
    <link rel='stylesheet' href='/stylesheets/carrito.css' />
  </head>
  <body>

       <!--Header-->
       <%- include('partials/head')  %> 
          <!--Subheader-->
      <div class="container-fluid">
          <nav class="nav text-center  navbar-dark navbar-expand-sm" style="background-color: rgb(54, 180, 54);">
              <ul class="navbar-nav ">
                  <li class="nav-item">
                        <a class="nav-link " href="/">Menu</a>
                  </li>
                  <li class="nav-item">
                        <a class="nav-link" href="/pc-gaming">Pc Gaming</a>
                  </li>
                  <!-- <li class="nav-item">
                        <a class="nav-link" href="#">Consolas</a>
                  </li> -->
                  <li class="nav-item">
                    <a class="nav-link active" href="/carrito">Carrito(<span>0</span>)</a>
                  </li>
              </ul>
          </nav>
  <!--Body-->

        <!--Producto -->
<div class="container" id="productos">
    <% productos.forEach(producto => { %>
    <div class="row justify-content-center">
        <div class="col-2 ">
            <img style="max-width: 8em;" src="images/<%= producto.image %> " class="card-img-top" alt="...">
        </div>
        <div class="col-4">
            <p class="card-text ml-3">1x  <%= producto.name %> </p>
        </div>
        <div class="col-4 ">
            <p class="ml-3" style="font-weight: bold; font-size: 1.2em;">$<%= producto.price - (producto.price * producto.descuento / 100) %> </p>
        </div>
    </div>
    <% }) %>
    <div class="row justify-content-end">
        <div class="col-4 ">
            <p> PRECIO FINAL </p>
            <a class="btn btn-success" href="/">Finalizar Compra</a>
        </div>
    </div>
</div>

        


  <!--Footer-->
  <%- include('partials/footer') %> 

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>
