<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9f65918680.js" crossorigin="anonymous"></script>
    <title>Gamer Zone Home</title>
    <link rel='stylesheet' href='/stylesheets/pcgamingstyle.css' />
  </head>
  <body>

       <!--Header-->
       <%- include('partials/head')  %> 
            <!--Subheader-->
            <div class="container-fluid">
              <nav class="nav text-center  navbar-dark navbar-expand-sm" style="background-color: rgb(54, 180, 54);">
                <div class="container">
                  <ul class="navbar-nav ">
                      <li class="nav-item">
                            <a class="nav-link " href="/">Menu</a>
                      </li>
                      <li class="nav-item">
                            <a class="nav-link active" href="/pc-gaming">Pc Gaming</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="/carrito">Carrito(<%= locals.itemsCarrito %>)</a>
                      </li>
                  </ul>
                  </div>
              </nav>
  <!--Body-->

  <div class="container-fluid" id="contenedor">
    <div class="row">

    <!--CATEGORIAS DE PRODUCTOS-->

      <div class="col-md-12 col-lg-12 d-flex justify-content-around align-items-center p-2  bg-dark " id="categoria">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <a href="/pc-gaming/1" class="btn btn-dark" id="boton">
                    <span class=""><i class="fas fa-mouse" id="icon" style="font-size: 2.5em; color: rgb(197, 199, 197);"></i></i> </span>
                    <p id="sub-cat" style="color: whitesmoke;">Mouse</p>
                    </a>
                </div>
        
                <div class="col text-center">
                    <a href="/pc-gaming/2" class="btn btn-dark">
                    <span class=""> <i class="far fa-keyboard" id="icon" style="font-size: 2.5em; color: rgb(211, 211, 211);"></i> </span>
                    <p id="sub-cat" style="color: whitesmoke;">Teclados</p>
                    </a>
                </div>
        
                <div class="col text-center">
                    <a href="/pc-gaming/4" class="btn btn-dark">
                    <span class=""><i class="fas fa-tv" id="icon" style="font-size: 2.5em; color: rgb(230, 230, 230);"></i> </span>
                    <p id="sub-cat" style="color: whitesmoke;">Monitores</p>
                    </a>
                </div>
              
                <div class="col text-center">
                    <a href="/pc-gaming/3" class="btn btn-dark">
                    <span class=""><i class="fas fa-headphones-alt" id="icon" style="font-size: 2.5em; color: rgb(230, 230, 230);"></i> </span>
                    <p id="sub-cat" style="color: whitesmoke;">Auriculares</p>
                    </a>
                </div>

            </div>
        </div>
      </div>  
    </div>  

    <!-- Todos los productos-->
<div class="container mb-4">
      <div class="row">
          
          <% product.forEach(product => { %>  
            <a href="/detail/<%= product.id %> "></a>
          <div class="col-md-4 mb-4  product-grid">
              <div class="image">
                    <img src="/images/<%= product.img %>" class="" alt="">
              </div>
              <h5 id="nombre-producto" class="text-center"><%= product.name %></h5>
              <% if (product.descuento > 0) { %>
                <h5><del>$<%= product.price %></del> <b style="color: green; font-size: 1em;"><%= product.descuento %> % OFF</b> </h5>
                <h5>$<%= (product.price - (product.price * product.descuento / 100)).toFixed(2) %></h5> 
              <% } else { %>
                <h5>$<%= (product.price - (product.price * product.descuento / 100)).toFixed(2) %></h5> 
              <% } %>
              <a href="/pc-gaming/detail/<%= product.id %> " id="nav-button" class="btn btn-success">Ver Detalle</a>
              <% if (locals.user.rol == 1) { %>
                <a href="/pc-gaming/edit/<%= product.id %> " id="nav-button" class="btn btn-warning mt-2">Editar Producto</a>
              <% } %>
          </div>
          <% }) %> 
      </div>
</div>

  <!--Footer-->
  <%- include('partials/footer') %> 
   
    


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>
